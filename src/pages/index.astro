  }
  heroVid.addEventListener('play', updatePlayState);
  heroVid.addEventListener('pause', updatePlayState);

  // Let IntersectionObserver handle play — saves 5.4MB on initial load
  if ('IntersectionObserver' in window) {
    var obs = new IntersectionObserver(function(entries) {
      if (entries[0].isIntersecting) tryPlay();
    }, { threshold: 0.3 });
    obs.observe(vidWrap);
  }

  // Also try on first user interaction as fallback
  document.addEventListener('touchstart', function startVid() {
    tryPlay();
    document.removeEventListener('touchstart', startVid);
  }, { once: true });

  updatePlayState();
}

