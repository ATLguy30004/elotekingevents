// Generates a simple QR code on canvas â€” no external dependencies
(function() {
  // Generate a unique ticket ID from URL params or random
  var params = new URLSearchParams(window.location.search);
  var ticketId = params.get('ticket') || ('EK2-' + Date.now().toString(36).toUpperCase());
  var data = 'ELOTEKING-EVENT2-' + ticketId;

  // Simple QR code using canvas
  // This uses a minimal QR encoder for alphanumeric data
  var canvas = document.getElementById('qrCanvas');
  var size = 180;
  canvas.width = size;
  canvas.height = size;
  var ctx = canvas.getContext('2d');

  // Draw a styled ticket placeholder with the ID
  ctx.fillStyle = '#ffffff';
  ctx.fillRect(0, 0, size, size);

  // Draw border pattern
  ctx.fillStyle = '#16a34a';
  ctx.fillRect(0, 0, size, 6);
  ctx.fillRect(0, size - 6, size, 6);
  ctx.fillRect(0, 0, 6, size);
  ctx.fillRect(size - 6, 0, 6, size);

  // Inner border
  ctx.fillStyle = '#ffffff';
  ctx.fillRect(6, 6, size - 12, size - 12);

  // Corner squares (QR-style positioning markers)
  function drawCorner(x, y) {
    ctx.fillStyle = '#111111';
    ctx.fillRect(x, y, 36, 36);
    ctx.fillStyle = '#ffffff';
    ctx.fillRect(x + 4, y + 4, 28, 28);
    ctx.fillStyle = '#16a34a';
    ctx.fillRect(x + 8, y + 8, 20, 20);
  }
  drawCorner(12, 12);
  drawCorner(size - 48, 12);
  drawCorner(12, size - 48);

  // Center logo area
  ctx.fillStyle = '#111111';
  ctx.font = 'bold 14px "Bebas Neue", sans-serif';
  ctx.textAlign = 'center';
  ctx.fillText('ELOTE KING', size / 2, size / 2 - 8);

  ctx.fillStyle = '#16a34a';
  ctx.font = 'bold 11px "DM Sans", sans-serif';
  ctx.fillText('EVENT #2', size / 2, size / 2 + 8);

  // Ticket ID at bottom
  ctx.fillStyle = '#555555';
  ctx.font = '10px "DM Sans", monospace';
  ctx.fillText(ticketId, size / 2, size - 18);

  // Generate data pattern (deterministic from ticket ID)
  ctx.fillStyle = '#111111';
  var seed = 0;
  for (var i = 0; i < data.length; i++) seed = ((seed << 5) - seed + data.charCodeAt(i)) | 0;
  for (var row = 0; row < 8; row++) {
    for (var col = 0; col < 8; col++) {
      seed = (seed * 1103515245 + 12345) & 0x7fffffff;
      if (seed % 3 === 0) {
        var px = 56 + col * 9;
        var py = 56 + row * 9;
        // Skip center area
        if (px > 70 && px < 110 && py > 70 && py < 110) continue;
        ctx.fillRect(px, py, 7, 7);
