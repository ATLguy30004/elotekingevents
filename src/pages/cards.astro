<style>
*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

:root {
  --green: #16a34a;
  --green-light: #22c55e;
  --green-bg: rgba(22, 163, 74, 0.07);
  --gold: #d4a017;
  --gold-bg: rgba(212, 160, 23, 0.08);
  --red: #dc2626;
  --text-primary: #111111;
  --text-body: #333333;
  --text-muted: #666666;
}

body {
  font-family: 'DM Sans', sans-serif;
  background: #e8e8e8;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 16px;
  gap: 56px;
  color: var(--text-body);
  -webkit-print-color-adjust: exact;
  print-color-adjust: exact;
}

.page-hint {
  font-size: 13px; color: #888; text-align: center;
  max-width: 400px; line-height: 1.6;
  background: #fff; padding: 12px 20px; border-radius: 8px;
  border: 1px solid #ddd;
}
.label {
  font-size: 11px; font-weight: 800; color: #888;
  text-transform: uppercase; letter-spacing: 1.5px;
  text-align: center; margin-bottom: -48px;
}

/* ===== CARD ===== */
.card {
  width: 400px;
  max-width: 100%;
  background: #ffffff;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 3px 20px rgba(0,0,0,0.12);
}

/* Popular strip */
.popular-strip {
  background: var(--green);
  color: #fff;
  text-align: center;
  padding: 7px 16px;
  font-size: 11px;
  font-weight: 800;
  letter-spacing: 2px;
  text-transform: uppercase;
}

/* ===== HEADER ===== */
.card-header {
  background: #111;
  color: #fff;
  padding: 12px 16px 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}
.card-header.gold-header { background: #1a1408; }
.header-logo { height: 28px; width: auto; flex-shrink: 0; }
.header-center { flex: 1; text-align: center; }
.header-title {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 22px; letter-spacing: 1px; line-height: 1; color: #fff;
}
.header-sub {
  font-size: 10px; font-weight: 600;
  color: rgba(255,255,255,0.6); letter-spacing: 0.5px; margin-top: 2px;
}
.halal-badge {
  font-size: 9px; font-weight: 800;
  color: var(--green-light); text-align: right; line-height: 1.6; flex-shrink: 0;
}

/* ===== FOOD PHOTO GRID ===== */
.food-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 90px);
  gap: 0;
}
.food-cell {
  position: relative;
  overflow: hidden;
  background: #111;
}
.food-cell img {
  width: 100%; height: 100%;
  object-fit: cover;
  display: block;
}
.food-caption {
  position: absolute;
  bottom: 0; left: 0; right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.75));
  color: #fff;
  font-size: 9px; font-weight: 700;
  padding: 10px 6px 5px;
  text-align: center;
  line-height: 1.2;
  text-transform: uppercase;
  letter-spacing: 0.3px;
}
.food-tag {
  position: absolute;
  top: 5px; right: 5px;
  background: var(--green);
  color: #fff;
  font-size: 7px; font-weight: 800;
  padding: 2px 5px; border-radius: 3px;
  text-transform: uppercase; letter-spacing: 0.5px;
  line-height: 1.3;
}
.food-tag.gold { background: var(--gold); }

/* ===== PRICE BANNER ===== */
.price-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 16px 9px;
  border-bottom: 1px solid #e8e8e8;
  background: var(--green-bg);
  border-left: 4px solid var(--green);
}
.price-banner.gold { background: var(--gold-bg); border-left-color: var(--gold); }
.prepay-label { font-size: 10px; font-weight: 800; color: var(--green); text-transform: uppercase; letter-spacing: 1px; }
.prepay-label.gold { color: var(--gold); }
.prepay-amount {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 38px; color: var(--green); line-height: 1;
}
.prepay-amount.gold { color: var(--gold); }
.door-block { text-align: right; }
.door-label { font-size: 10px; font-weight: 700; color: var(--red); text-transform: uppercase; letter-spacing: 0.5px; }
.door-amount { font-size: 18px; font-weight: 800; color: var(--red); display: block; }
.door-note { font-size: 11px; color: var(--text-muted); margin-top: 1px; }

/* ===== EVENT BAR ===== */
.event-bar {
  background: #f7f7f7;
  border-bottom: 1px solid #e8e8e8;
  padding: 7px 16px;
  font-size: 11px; font-weight: 600; color: var(--text-muted);
  text-align: center; line-height: 1.5;
}
.event-bar .g { color: var(--green); font-weight: 800; }

/* ===== TIER TITLE ===== */
.tier-title-row { padding: 12px 16px 9px; border-bottom: 1px solid #eee; }
.tier-eyebrow {
  font-size: 10px; font-weight: 800; color: var(--text-muted);
  text-transform: uppercase; letter-spacing: 2px; margin-bottom: 2px;
}
.tier-name {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 30px; color: var(--text-primary); line-height: 1; letter-spacing: 0.5px;
}
.tier-sub { font-size: 13px; font-weight: 600; color: var(--green); margin-top: 2px; }
.tier-sub.gold { color: var(--gold); }

/* ===== CHOOSE BOX ===== */
.choose-section { padding: 10px 16px 0; }
.choose-label {
  font-size: 10px; font-weight: 800; color: var(--text-primary);
  text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 6px;
}
.choose-box {
  background: #f7f7f7; border: 1px solid #e0e0e0;
  border-radius: 8px; padding: 9px 12px; margin-bottom: 10px;
}
.choose-item {
  display: flex; align-items: flex-start; gap: 8px;
  padding: 3px 0; font-size: 13px; font-weight: 600;
  color: var(--text-body); line-height: 1.3;
}
.ci { color: var(--green); font-size: 8px; flex-shrink: 0; margin-top: 4px; }

/* ===== INCLUDED ITEMS ===== */
.included-section { padding: 0 16px 10px; }
.included-label {
  font-size: 10px; font-weight: 800; color: var(--green);
  text-transform: uppercase; letter-spacing: 1.5px;
  margin-bottom: 6px; padding-top: 10px;
  display: flex; align-items: center; gap: 6px;
}
.included-label.gold { color: var(--gold); }
.included-label::before {
  content: ''; display: block; height: 2px; width: 16px;
  background: var(--green); border-radius: 1px;
}
.included-label.gold::before { background: var(--gold); }
.item-row {
  display: flex; align-items: flex-start; gap: 8px;
  padding: 5px 0; border-bottom: 1px solid #f0f0f0;
}
.item-row:last-child { border-bottom: none; }
.ic { color: var(--green); font-size: 13px; flex-shrink: 0; font-weight: 800; margin-top: 1px; }
.ic.gold { color: var(--gold); }
.it { font-size: 13px; color: var(--text-primary); font-weight: 600; line-height: 1.3; }
.it .d { display: block; font-size: 11px; color: var(--text-muted); font-weight: 500; margin-top: 1px; }
.it .inc {
  font-size: 9px; font-weight: 800; color: var(--green);
  background: var(--green-bg); padding: 2px 5px; border-radius: 3px; margin-left: 4px;
}

/* ===== VALUE BAR ===== */
.value-bar {
  margin: 0 16px 12px;
  background: var(--green-bg); border: 1px solid rgba(22,163,74,0.2);
  border-radius: 8px; padding: 9px 13px;
  display: flex; justify-content: space-between; align-items: center;
