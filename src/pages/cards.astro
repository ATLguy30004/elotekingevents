.value-bar.gold { background: var(--gold-bg); border-color: rgba(212,160,23,0.2); }
.vl { font-size: 12px; color: var(--text-muted); font-weight: 600; }
.vv { font-size: 17px; font-weight: 800; color: var(--green); }
.vv.gold { color: var(--gold); }

/* ===== FOOTER ===== */
