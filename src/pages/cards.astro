<style>
*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
body {
  font-family: 'DM Sans', sans-serif;
  background: #1a1a1a;
  display: flex; flex-direction: column;
  align-items: center; padding: 40px 16px;
  gap: 60px;
}
.label {
  color: #aaa; font-size: 13px; font-weight: 700;
  text-transform: uppercase; letter-spacing: 1px;
  margin-bottom: -48px; text-align: center;
  background: #333; padding: 6px 16px; border-radius: 6px;
}

/* ===== CARD ===== */
.card {
  width: 400px; max-width: 100%;
  background: #111;
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid #2a2a2a;
}

/* Top section */
.card-top {
  padding: 22px 24px 16px;
  text-align: center;
}
.card-top.t1 { background: linear-gradient(160deg, #0f1f0f 0%, #162816 100%); }
.card-top.t2 { background: linear-gradient(160deg, #0a1a0a 0%, #0d220d 100%); border-top: 4px solid #16a34a; }
.card-top.t3 { background: linear-gradient(160deg, #1a1408 0%, #261e0a 100%); border-top: 4px solid #d4a017; }

.brand-row {
  display: flex; align-items: center;
  justify-content: center; gap: 8px;
  margin-bottom: 12px;
}
.brand-name {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 20px; color: #fff; letter-spacing: 3px;
}
.halal-tag {
  font-size: 10px; font-weight: 800;
  background: #16a34a; color: #fff;
  padding: 3px 8px; border-radius: 4px;
  text-transform: uppercase; letter-spacing: 0.5px;
}

.crown-row {
  font-size: 28px; margin-bottom: 4px; line-height: 1;
}
.tier-num {
  font-size: 11px; font-weight: 800; color: #888;
  letter-spacing: 2px; text-transform: uppercase; margin-bottom: 2px;
}
.card-title {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 38px; color: #fff; line-height: 1;
  letter-spacing: 1px; margin-bottom: 4px;
}
.card-subtitle {
  font-size: 14px; color: #22c55e; font-weight: 600; margin-bottom: 12px;
}
.card-subtitle.gold { color: #d4a017; }

.price-row {
  display: flex; align-items: center;
  justify-content: center; gap: 10px;
}
.prepay-price {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 44px; color: #22c55e; line-height: 1;
}
.price-meta { text-align: left; }
.door-price {
  font-size: 14px; color: #666;
  text-decoration: line-through; display: block;
}
.save-tag {
  font-size: 11px; font-weight: 800;
  background: #16a34a; color: #fff;
  padding: 3px 8px; border-radius: 4px;
  text-transform: uppercase; display: inline-block; margin-top: 2px;
}
.save-tag.gold-tag { background: #d4a017; }

/* Popular strip */
.popular-strip {
  background: #16a34a; color: #fff;
  text-align: center; padding: 8px;
  font-size: 12px; font-weight: 800;
  letter-spacing: 1.5px; text-transform: uppercase;
}

/* Event bar */
.event-bar {
  background: #0a0a0a; padding: 10px 20px;
  font-size: 13px; font-weight: 700; color: #888;
  text-align: center; line-height: 1.5;
}
.event-bar .g { color: #22c55e; }

/* Items */
.items-section { padding: 16px 22px 4px; }
.items-label {
  font-size: 11px; font-weight: 800; color: #22c55e;
  letter-spacing: 2px; text-transform: uppercase; margin-bottom: 8px;
}
.items-label.gold { color: #d4a017; }

.choose-box {
  background: #1a1a1a; border: 1px solid #2a2a2a;
  border-radius: 10px; padding: 12px 14px; margin-bottom: 12px;
}
.choose-title {
  font-size: 11px; font-weight: 800; color: #fff;
  text-transform: uppercase; letter-spacing: 1px; margin-bottom: 8px;
}
.choose-item {
  display: flex; gap: 8px; align-items: flex-start; padding: 3px 0;
  font-size: 14px; color: #ddd; font-weight: 600;
}
.ci { color: #16a34a; flex-shrink: 0; margin-top: 2px; }

.item-row {
  display: flex; align-items: flex-start; gap: 8px; padding: 5px 0;
  border-bottom: 1px solid #1e1e1e;
}
.item-row:last-child { border-bottom: none; }
.ic { color: #16a34a; font-size: 14px; flex-shrink: 0; margin-top: 2px; }
.it { font-size: 15px; color: #fff; font-weight: 600; line-height: 1.3; }
.it .d { display: block; font-size: 12px; color: #888; font-weight: 500; }
.it .inc {
  font-size: 10px; font-weight: 800; color: #22c55e;
  background: rgba(34,197,94,0.15); padding: 2px 6px;
  border-radius: 3px; margin-left: 4px;
}

/* Total */
.total-bar {
  margin: 0 22px 14px;
  background: rgba(22,163,74,0.1); border: 1px solid rgba(22,163,74,0.3);
  border-radius: 8px; padding: 10px 14px;
  display: flex; justify-content: space-between; align-items: center;
}
.total-bar.gold-bar {
  background: rgba(212,160,23,0.1); border-color: rgba(212,160,23,0.3);
}
.tl { font-size: 13px; color: #888; font-weight: 600; }
.tv { font-size: 18px; font-weight: 800; color: #22c55e; }
.tv.gold { color: #d4a017; }

/* Flan add-on */
.flan-row {
  margin: 0 22px 14px;
  background: #1a1a1a; border: 1px dashed #333;
  border-radius: 8px; padding: 10px 14px;
  display: flex; justify-content: space-between; align-items: center;
}
.fl-label { font-size: 13px; color: #aaa; font-weight: 600; }
.fl-label span { display: block; font-size: 11px; color: #666; }
.fl-price { font-size: 16px; color: #d4a017; font-weight: 800; }

/* Footer */
.card-bottom {
  padding: 10px 22px 14px;
  background: #0a0a0a; text-align: center;
}
.trust { font-size: 12px; color: #666; font-weight: 600; letter-spacing: 0.5px; }
.trust span { color: #22c55e; }
</style>
