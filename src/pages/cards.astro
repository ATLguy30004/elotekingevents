<style>
*, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

:root {
  --green: #16a34a;
  --green-light: #22c55e;
  --green-bg: rgba(22, 163, 74, 0.07);
  --gold: #d4a017;
  --gold-bg: rgba(212, 160, 23, 0.08);
  --text-primary: #111111;
  --text-body: #333333;
  --text-muted: #666666;
}

body {
  font-family: 'DM Sans', sans-serif;
  background: #e8e8e8;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px 16px;
  gap: 56px;
  color: var(--text-body);
  -webkit-print-color-adjust: exact;
  print-color-adjust: exact;
}

.page-hint {
  font-size: 13px; color: #888; text-align: center;
  max-width: 400px; line-height: 1.6;
  background: #fff; padding: 12px 20px; border-radius: 8px;
  border: 1px solid #ddd;
}
.label {
  font-size: 11px; font-weight: 800; color: #888;
  text-transform: uppercase; letter-spacing: 1.5px;
  text-align: center; margin-bottom: -48px;
}

/* ===== CARD ===== */
.card {
  width: 400px; max-width: 100%;
  background: #ffffff; border-radius: 14px;
  overflow: hidden; box-shadow: 0 3px 20px rgba(0,0,0,0.12);
}

/* Popular strip */
.popular-strip {
  background: var(--green); color: #fff;
  text-align: center; padding: 7px 16px;
  font-size: 11px; font-weight: 800;
  letter-spacing: 2px; text-transform: uppercase;
}

/* ===== HEADER ===== */
.card-header {
  background: #111; color: #fff;
  padding: 12px 16px 10px;
  display: flex; align-items: center;
  justify-content: space-between; gap: 10px;
}
.card-header.gold-header { background: #1a1408; }
.header-logo { height: 28px; width: auto; flex-shrink: 0; }
.header-center { flex: 1; text-align: center; }
.header-eyebrow {
  font-size: 10px; font-weight: 700;
  color: rgba(255,255,255,0.5); letter-spacing: 2px;
  text-transform: uppercase; margin-bottom: 1px;
}
.header-title {
  font-family: 'Bebas Neue', sans-serif;
  font-size: 26px; letter-spacing: 1px; line-height: 1; color: #fff;
}
.header-sub { font-size: 13px; font-weight: 600; color: var(--green-light); margin-top: 2px; }
.header-sub.gold { color: var(--gold); }
.halal-badge {
  font-size: 9px; font-weight: 800;
  color: var(--green-light); text-align: right;
  line-height: 1.6; flex-shrink: 0;
}

/* ===== FOOD PHOTO GRID ===== */
.food-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, 88px);
}
.food-cell { position: relative; overflow: hidden; background: #111; }
.food-cell img { width: 100%; height: 100%; object-fit: cover; display: block; }
.food-caption {
  position: absolute; bottom: 0; left: 0; right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.78));
  color: #fff; font-size: 8px; font-weight: 700;
  padding: 12px 5px 4px; text-align: center;
  line-height: 1.2; text-transform: uppercase; letter-spacing: 0.3px;
}
.food-tag {
  position: absolute; top: 5px; right: 5px;
  background: var(--green); color: #fff;
  font-size: 7px; font-weight: 800;
  padding: 2px 5px; border-radius: 3px;
  text-transform: uppercase; letter-spacing: 0.3px; line-height: 1.3;
}
.food-tag.gold { background: var(--gold); }

/* ===== EVENT BAR ===== */
.event-bar {
  background: #111; padding: 8px 16px;
  font-size: 11px; font-weight: 600; color: #aaa;
  text-align: center; line-height: 1.6;
  border-bottom: 2px solid var(--green);
}
.event-bar .g { color: var(--green-light); font-weight: 800; }

/* ===== CHOOSE MAINS ===== */
.choose-section { padding: 12px 16px 0; }
.choose-label {
  font-size: 10px; font-weight: 800; color: var(--text-primary);
  text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 7px;
  background: #f0f0f0; border-radius: 5px; padding: 5px 10px; display: block;
}
.choose-box {
  background: #f7f7f7; border: 1px solid #e0e0e0;
  border-radius: 8px; padding: 9px 12px;
}
.choose-item {
  display: flex; align-items: flex-start; gap: 8px;
  padding: 4px 0; font-size: 13px; font-weight: 600;
  color: var(--text-body); line-height: 1.3;
}
.choose-item .desc { display: block; font-size: 11px; font-weight: 500; color: var(--text-muted); }
.ci { color: var(--green); font-size: 8px; flex-shrink: 0; margin-top: 4px; }

/* ===== ALSO INCLUDED ===== */
.included-section { padding: 10px 16px 0; }
.section-label {
  font-size: 10px; font-weight: 800; color: var(--green);
  text-transform: uppercase; letter-spacing: 2px; margin-bottom: 6px; display: block;
}
.section-label.gold { color: var(--gold); }
.item-row {
  display: flex; align-items: flex-start; gap: 9px;
  padding: 6px 0; border-bottom: 1px solid #f0f0f0;
}
.item-row:last-child { border-bottom: none; }
.ic { color: var(--green); font-size: 14px; flex-shrink: 0; font-weight: 800; }
.ic.gold { color: var(--gold); }
.it { font-size: 14px; color: var(--text-primary); font-weight: 700; line-height: 1.2; }
.it .d { display: block; font-size: 12px; color: var(--text-muted); font-weight: 500; margin-top: 1px; }
.it .inc {
  font-size: 9px; font-weight: 800; color: var(--green);
  background: var(--green-bg); padding: 2px 5px; border-radius: 3px; margin-left: 4px;
}

/* ===== ADD-ONS ===== */
.addons-section { padding: 10px 16px 14px; }
.addons-label {
  font-size: 10px; font-weight: 800; color: var(--gold);
  text-transform: uppercase; letter-spacing: 2px; margin-bottom: 7px; display: block;
}
.addon-row {
  display: flex; justify-content: space-between; align-items: center;
  padding: 5px 0; border-bottom: 1px solid #f0f0f0;
  font-size: 13px; font-weight: 600; color: var(--text-body);
}
.addon-row:last-child { border-bottom: none; }
.addon-price { color: var(--gold); font-weight: 800; font-size: 14px; }

/* ===== FOOTER ===== */
.card-footer {
  padding: 9px 16px; background: #111;
  text-align: center; font-size: 12px; font-weight: 700;
  color: #888; letter-spacing: 0.3px;
}
.card-footer span { color: var(--green-light); }
</style>
